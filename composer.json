{
    "name": "ahmedmub/designpatternseasy",
    "description": "A simple guide to comprehend the concept of design patterns and learn how to implement them effectively",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "DesignPatternEasy\\Behavioral\\ChainOfResponsibility\\" : "Behavioral/ChainOfResponsibility/src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DesignPatternEasy\\tests\\" : "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0 || ^10.0",
        "friendsofphp/php-cs-fixer": "^3.16",
        "vimeo/psalm": "^5.11"
    },
    "scripts": {
        "check-style": "vendor/bin/php-cs-fixer fix app",
        "static-analyze-code": "vendor/bin/psalm --show-info=true --no-cache --shepherd --stats"
    }
}
